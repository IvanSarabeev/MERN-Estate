{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "",
    "paths": {
      "@/*": ["./src/*"],
      "lib/*": ["./src/lib/*"],
      "api/*": ["./src/api/*"],
      "auth/*": ["./src/auth/*"],
      "components/*":["./src/components/*"],
      "constants/*":["./src/constants/*"],
      "hooks/*":["./src/hooks/*"],
      "pages/*":["./src/pages/*"],
      "assets/*":["./src/assets/*"],
      "types/*":["./src/types/*"],
      "utils/*":["./src/utils/*"],
      "store/*":["./src/store/*"],
      "stores/*":["./src/stores/*"],
      "defines/*":["./src/defines/*"],
      "services/*":["./src/services/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "vite-env.d.ts", "declarations.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
